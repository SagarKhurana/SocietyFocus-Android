<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:minHeight="50dp"
                android:paddingLeft="2dp"
                android:src="@drawable/ic_1_2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:minHeight="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contactnotext"
                    android:layout_toRightOf="@+id/assetcharges"
                    android:padding="1dp"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/assetname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="zdvzd"
                    android:textSize="18dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/assetdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/assetname"
                    android:layout_marginBottom="10dp"
                    android:padding="1dp"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/contactnotext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/assetdescription"
                    android:alpha=".6"
                    android:padding="1dp"
                    android:text="Contact No.:"
                    android:textSize="13dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/contactno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/assetdescription"
                    android:layout_toRightOf="@id/contactnotext"
                    android:padding="1dp"
                    android:textSize="13dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/assetchargestext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contactnotext"
                    android:alpha=".6"
                    android:padding="1dp"
                    android:text="Charges:"
                    android:textSize="13dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/assetcharges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contactnotext"
                    android:layout_toRightOf="@+id/assetchargestext"
                    android:padding="1dp"
                    android:textSize="13dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/assetdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/assetchargestext"
                    android:layout_marginBottom="5dp"
                    android:alpha=".6"
                    android:padding="2dp"
                    android:textSize="12dp"
                    android:textStyle="italic" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
